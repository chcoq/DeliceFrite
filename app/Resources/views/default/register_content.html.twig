FOSUserBundle:Registration:register_content.html.twig
{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}

    <div class="col-lg-4" id="bloc_login">
        <div class="title"><h2>Inscription Ã  la plate-forme</h2></div><br/>

        <div class="form_login" style="">
            {% if error %}
                <div class="col-md-12">
                    <div class="alert alert-danger" role="alert">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                </div>
            {% endif %}

            <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="post" class="form-horizontal">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <div class="form-group">
                    {{ form_label(form.nom, "Nom :", {'label_attr': {'class': 'col-lg-4 control-label'}}) }}
                    <div class="col-lg-7">
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.nom) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.prenom, "Prenom :", {'label_attr': {'class': 'col-lg-4 control-label'}}) }}
                    <div class="col-lg-7">
                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.prenom) }}
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-offset-5">
                        <input type="submit" id="_submit"  name="_submit" value="Inscription" class="btn" />
                    </div>
                </div>
            </form>
        </div><hr/>
    </div>
{% endblock fos_user_content %}